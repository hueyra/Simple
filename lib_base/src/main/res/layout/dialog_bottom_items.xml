<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bid_tv_title"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/bg_white_with_top_corner"
        android:gravity="center"
        android:textColor="#9F9F9F"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/bid_v_title_split"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_split_line_height"
        android:background="@color/color_split_line"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bid_rv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#F7F8F9" />

    <TextView
        android:id="@+id/bid_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_ripple_normal"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>