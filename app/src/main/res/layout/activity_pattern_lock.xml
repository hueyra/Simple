<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.hueyra.base.widget.SimpleTitleView
        android:id="@+id/stv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stv_show_split_line="false"
        app:stv_title="手势密码" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.github.hueyra.patternlocker.view.PatternLockerView
        android:id="@+id/plv_lock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:id="@+id/tv_reset"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_def_btn"
        android:gravity="center"
        android:text="重新开始设置"
        android:textColor="@color/white"
        android:visibility="gone" />

</LinearLayout>