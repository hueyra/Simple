<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.hueyra.base.widget.SimpleTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:stv_show_finish="false"
        app:stv_title="@string/app_name" />

    <Button
        android:id="@+id/btn_action1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相机相册" />

    <Button
        android:id="@+id/btn_action2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生物识别" />

    <Button
        android:id="@+id/btn_action3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WebView" />

    <Button
        android:id="@+id/btn_action4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择器" />

    <Button
        android:id="@+id/btn_action5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="弹框" />

    <Button
        android:id="@+id/btn_action6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="简单表单" />

    <Button
        android:id="@+id/btn_action7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片视频" />

    <Button
        android:id="@+id/btn_action8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动画" />

    <Button
        android:id="@+id/btn_action9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="二维码" />

    <Button
        android:id="@+id/btn_action10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="行为验证码" />

</LinearLayout>